{% set docsUrl = "https://github.com/dougblackjr/craft-ping-siteimprove/blob/master/README.md" %}

{# The title of this CP section #}
{% set title = "Craft Ping Siteimprove" %}

{# The URL to this plugin's base CP section #}
{% set pluginCpUrl = url('craft-ping-siteimprove') %}

{{ forms.textField({
    label: 'API Key',
    instructions: 'Your SiteImprove API key',
    id: 'apiKey',
    name: 'apiKey',
    value: settings['apiKey']})
}}

{{ forms.textField({
    label: 'Username',
    instructions: 'Your SiteImprove user name',
    id: 'userName',
    name: 'userName',
    value: settings['userName']})
}}

{{ forms.textField({
    label: 'Site ID',
    instructions: 'Your website SiteImprove Site ID',
    id: 'siteId',
    name: 'siteId',
    value: settings['siteId']})
}}